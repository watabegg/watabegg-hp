---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro'; // Import Footer
import { ViewTransitions } from 'astro:transitions'; // Import ViewTransitions

interface Props {
	title?: string;
	description?: string;
	isFullScreen?: boolean; // Add prop to control full screen behavior
}

const {
	title = 'watabegg',
	description = 'watabeggの個人サイト',
	isFullScreen = false
} = Astro.props;
---
<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions /> {/* Add ViewTransitions component */}
	</head>
	<!-- Use custom base colors -->
	<body class="flex flex-col min-h-screen bg-base-100 text-base-content">
		{/* Conditionally render Header only if not isFullScreen */}
		{ !isFullScreen && <Header /> }
		<!-- Apply classes conditionally based on isFullScreen using template literal -->
		<main
			class={`flex-grow w-full ${!isFullScreen ? 'container mx-auto p-4' : ''} ${isFullScreen ? 'p-0 max-w-none' : ''}`}
		>
			<slot />
		</main>
		{/* Conditionally render Footer only if not isFullScreen */}
		{ !isFullScreen && <Footer /> }
	</body>
</html>

<style is:global>
	/* Apply some basic global styles */
	body {
		font-family: sans-serif; /* Example: Set a default font */
	}

	/* Ensure html and body take full height for flex layout */
	html, body {
		height: 100%;
		margin: 0;
	}

	/* Removed the :has selector as conditional classes handle this now */
</style>
