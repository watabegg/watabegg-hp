---
const links = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Product', href: '/product' },
  { name: 'Blog', href: '/blog' },
  { name: 'Contact', href: '/contact' },
];

const currentPath = Astro.url.pathname;
---
{/* Apply bg-primary, keep text/sticky/transition. Removed header-bg-pattern class. */}
<header class="bg-primary text-primary-content sticky top-0 z-50" transition:name="header-bg" style="clip-path: polygon(0 0, 2000px 0, 0 100%);">
  <nav class="container mx-auto flex items-center p-4">
    <ul class="flex space-x-6">
      {links.map(link => {
        const isActive = currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href));
        return (
          <li>
            <a
              href={link.href}
              class:list={[
                "pb-1 hover:opacity-80 transition-opacity duration-200", // Hover effect
                { "border-b-2 border-primary-content font-semibold": isActive }, // Active link style (use primary-content border)
                { "opacity-75": !isActive } // Inactive link style
              ]}
            >
              {link.name}
            </a>
          </li>
        );
      })}
    </ul>
  </nav>
</header>